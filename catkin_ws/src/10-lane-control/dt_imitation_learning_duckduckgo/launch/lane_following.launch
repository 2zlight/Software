<?xml version="1.0" encoding="utf-8"?>
<launch>
	<arg name="veh" default="$(env VEHICLE_NAME)"/>
	<!-- start basic args -->
	<include file="$(find duckietown_demos)/launch/master.launch">
		<arg name="veh" value="$(arg veh)"/>
		<arg name="visualization" default="true" />
		<arg name="verbose" default="false" />
		<arg name="param_file_name" default="default" />
		<arg name="line_detector_param_file_name" default="default" />
		<arg name="anti_instagram" default="true" />
		<arg name="/lane_following/stop_line_filter" default="false" /> <!-- will not ever allow a transition into COORDINATION mode -->
                <arg name="/lane_following/lane_filter" default="false" /> <!-- don't run the normal histgram filter -->
	</include>

        <arg name="pkg_name" default="dt_imitation_learning_$(arg veh)" />
        <remap from="lane_filter_node/segment_list" to="ground_projection/lineseglist_out"/>
        <include file="$(eval find(pkg_name) + '/launch/lane_filter_node.launch')">
                 <arg name="veh" value="$(arg veh)"/>
        </include>

</launch>
